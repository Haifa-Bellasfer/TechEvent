    <div class="container">
        <h3 class="pb-3 mb-4 font-italic border-bottom">
            Archive
        </h3>
        {% for i in events %}
        <form action="{{ path('event_AdminEventrchiveUpdate',{'id':i.id_event})}}" method="post">
            {% if i.end_date|date('U') > 'now'|date('U') %}

            <div class="row">
                <div class="col-md-6" >
                    <div class="card flex-md-row mb-4 shadow-sm h-md-250" style="background-color: #6f93b8">
                        <div class="card-body d-flex flex-column align-items-start">
                            <strong class="d-inline-block mb-2 text-primary"><h4>{{ i.event_name }}</h4></strong>
                            <h6 class="mb-0">
                                <a class="text-dark" href="#">{{ i.end_date|date }}</a>
                            </h6>
                            <div class="mb-1 text-muted small">{{ i.organizer }}</div>
                            <p class="card-text mb-auto">{{ i.description }}</p>
                        </div>
                        <img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src="{{ asset('img/uploads/'~ i.photo) }}" style="width: 200px; height: 250px;">
                    </div>
                </div>
                {% else %}
                    {% if i.archive =='0' %}


                        <div class="col-md-6">
                            <div class="card flex-md-row mb-4 shadow-sm h-md-250" style="background-color:#d7eaa2">
                                <div class="card-body d-flex flex-column align-items-start">
                                    <strong class="d-inline-block mb-2 text-primary"><h4>{{ i.event_name }}</h4></strong>
                                    <h6 class="mb-0">
                                        <a class="text-dark" href="#">{{ i.end_date|date }}</a>
                                    </h6>
                                    <div class="mb-1 text-muted small">{{ i.organizer }}</div>
                                    <p class="card-text mb-auto">{{ i.description }}</p>
                                </div>
                                <img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src="{{ asset('img/uploads/'~ i.photo) }}" style="width: 200px; height: 250px;">
                            </div>
                        </div>
                    {% else %}
                        <div class="col-md-6">
                            <div class="card flex-md-row mb-4 shadow-sm h-md-250" style="background-color: #ce8483">
                                <div class="card-body d-flex flex-column align-items-start">
                                    <strong class="d-inline-block mb-2 text-primary"><h4>{{ i.event_name }}</h4></strong>
                                    <h6 class="mb-0">
                                        <a class="text-dark" href="#">{{ i.end_date|date }}</a>
                                    </h6>
                                    <div class="mb-1 text-muted small">{{ i.organizer }}</div>
                                    <p class="card-text mb-auto">{{ i.description }}</p>
                                    <a class="btn btn-outline-primary btn-sm" role="button" style="background-color: #0b3251" href="{{ path('event_AdminEventrchiveUpdate',{'id':i.id_event}) }}">Archive</a>

                                </div>
                                <img class="card-img-right flex-auto d-none d-lg-block" alt="Thumbnail [200x250]" src="{{ asset('img/uploads/'~ i.photo) }}" style="width: 200px; height: 250px;">
                            </div>
                        </div>

                    {% endif %}
                {% endif %}
                {% endfor %}
            </div>
        </form>
    </div>






{% extends app.user  ? 'base.html.twig' : '@Event/Default/index.html.twig'%}
{% block content %}





    <section class="category-section spad" style="padding-top: 10px;">


        <div class="container">
            <div class="row col-md-15 col-md-offset-2 custyle">
                <table class="table table-striped custab">
                    <thead>

                    <tr>

                        <th>Event Name</th>
                        <th>Address</th>
                        <th class="text-center">Action</th>
                    </tr>
                    </thead>
                    {% for i in e %}
                        {% if i.organizer == app.user %}
                            <tr>


                                <td><h4>{{ i.event_name }}</h4></td>
                                <td>{{ i.address }}</td>
                                <td class="text-center"><a href="{{ path('event_Afficheupdate',{'id':i.id_event}) }}"> <img class="js-buttom" src="{{ asset('img/rotate.png') }}" style="width:35px"></a>
                                    <a href="{{ path('event_delete',{'id':i.id_event}) }}">  <img class="js-buttom" src="{{ asset('img/del.png') }}" style="width:35px"></a>
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                </table>
            </div>
        </div>

    </section>
























{% endblock %}
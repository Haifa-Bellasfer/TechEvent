<body>


<div class="container-contact100">

    <div class="wrap-contact100">
        <form method="post" class="contact100-form validate-form">
				<span class="contact100-form-title">
					Update the workshop !
				</span>

            <div class="wrap-input100 validate-input" data-validate="Please enter the workshop title">
                <input class="input100" type="text" name="Title" placeholder="Workshop title">
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input" data-validate = "Please describe the workshop">
                <textarea class="input100" type="text" name="Description" placeholder="Description"></textarea>
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input" data-validate = "Please the location">
                <input class="input100" type="text" name="location" placeholder="Location">
                <span class="focus-input100"></span>
            </div>

            <div class="wrap-input100 validate-input" data-validate = "Please enter the number of places">
                <input class="input100" type="number" name="nbr" placeholder="Number of places">
                <span class="focus-input100"></span>
            </div>
            <div class="wrap-input100 validate-input" data-validate = "Please enter the Date of the workshop">
                <input class="input100" type="datetime-local" name="Date" id="Start" placeholder="Date of the workshop">
                <span class="focus-input100"></span>
            </div>

            <div class="container-contact100-form-btn">
                <button class="contact100-form-btn" id="btn">
						<span>
							<i class="fa fa-paper-plane-o m-r-6" aria-hidden="true"></i>
							Submit
						</span>
                </button>
            </div>
        </form>
    </div>
</div>




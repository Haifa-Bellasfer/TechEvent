{% extends 'base.html.twig' %}
{% block content %}
    <link rel="stylesheet" href="{{ asset('Clubs/css/flip.css') }}"/>
    <link rel="stylesheet" href="{{ asset('Clubs/css/search.css') }}"/>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<section class="category-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 order-2 order-lg-1">
                <div class="filter-widget">
                    <h1 class="fw-title">Clubs</h1>
                    <form  method="post" action="{{ path('FindClub') }}">
                                <div class="input-group">
                                                <form action="" class="search-form">
                                                    <div class="form-group has-feedback">
                                                        <label for="search" class="sr-only">Search</label>
                                                        <input type="text" class="form-control" name="query" id="search" placeholder="search">
                                                        <span class="glyphicon glyphicon-search form-control-feedback"></span>
                                                    </div>
                                                </form>
                                </div>
                    </form>
                    <ul class="category-menu">
                        <li><a href="#">Themes</a>
                            <ul class="sub-menu">
                                {% for th in theme %}
                                <li><a href="{{ path('FindClub') }}" name="query">{{ th.theme_name }}</a></li>
                                {% endfor %}
                                <li><a href="#">Artificial intelligence</a></li>
                                <li><a href="#">Development</a></li>
                                <li><a href="#">Hacking</a></li>
                                <li><a href="#">Other..</a></li>
                            </ul>
                        </li>
                        <li><a href="{{ path('My_Club') }}" >My club</a>

                        </li>
                        <li><a href="{{ path('create') }}" >Create a Club</a>

                        </li>

                    </ul>
                </div>
            </div>

        <div class="col-lg-9 order-1 order-lg-2 mb-5 mb-lg-0" >
            <section id="team" class="pb-5">

                    <h5 class="section-title h1">Our Clubs</h5>
            <div class="row">
                {% for c in Club %}
                <div class="col-xs-12 col-sm-6 col-md-4">
                    <div class="image-flip" ontouchstart="this.classList.toggle('hover');">
                        <div class="mainflip">
                            <div class="frontside">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <p><img class=" img-fluid" src="{{ asset('Clubs/img/9c565b5031b48eb96b549e9cb4817b45.png') }}" alt="card image"></p>
                                        <h4 class="card-title"><b>Club Name: </b> {{ c.club_Name }}</h4>
                                        <p class="card-text"><b>Logo: </b>{{ c.logo}}</p>
                                        <p class="card-text"><b>Email: </b>{{ c.email}}</p>
                                        <p class="card-text"><b>Facebook: </b>{{ c.facebook}}</p>
                                    </div>
                                </div>
                            </div>
                            <div class="backside">
                                <div class="card">
                                    <div class="card-body text-center mt-4">
                                        <h4 class="card-title"><b>Club Name:  </b> {{ c.club_Name }}</h4> </br> </br>
                                        <p class="card-text"><b> Club Description: </b> </br> </br>{{ c.club_description}}</p> </br> </br>

                                        <ul class="list-inline">

                                            <li class="list-inline-item">
                                                <a href="{{ path('Join_us') }}"> Join us</a>
                                            </li>

                                        </ul>
                                    </div>
                                </div>
                            </div>

                            </div>
                        </div>
                    </div>
                {% endfor %}

</div>







    </section>
        </div>
        </div>
    </div>
</section>


{% endblock %}

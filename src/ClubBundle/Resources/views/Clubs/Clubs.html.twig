{% block create_club %}

    <div class="modal fade" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"><h3 class="panel-title"><strong>Create your Club</strong></h3></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <form method="post">


                                    <label for="ClubName">ClubName </label>
                                    <input type="text" class="form-control" name="ClubName"/><br><br>



                                    <label for="Logo">Logo </label>
                                    <input type="text" class="form-control" name="Logo"/><br><br>


                                    <label for="email">email </label>
                                    <input type="text" class="form-control" name="email"/><br><br>


                                    <label for="Facebook">Facebook </label>
                                    <input type="text" class="form-control" name="Facebook"/><br><br>


                                <label for="ClubDescription">ClubDescription</label>
                                <input type="text" class="form-control" name="ClubDescription"/><br><br>

                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-dark">Submit</button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% extends 'backoffice.html.twig' %}
{% block content %}
    <div class="col-lg-12">
        <h2>Themes</h2>
        <hr>
    </div>

    {% if theme_del is defined %}
        <div class="col-lg-4 bg-light card-body">
            <h5>Delete Theme</h5>
            <hr>
            <div class="alert bg-white">
                <form method="post" action="{{ path('Theme_del',{'id':theme_del.idTheme}) }}">
                    <p>Are you sure you want to delete <strong>{{ theme_del.themeName }}</strong> ?</p>
                    <div class="alert center-block align-content-center">
                        <a href="{{ path('Theme_create') }}" class="btn btn-xs btn-secondary pull-right">Cancel</a>
                        <button class="btn btn-xs btn-danger pull-right">Delete</button>
                    </div>
                </form>
            </div>
        </div>

    {% elseif not theme_ed is defined  %}
        <form method="post">
            <div class="form-group row">
                <label for="text" class="col-12 col-form-label">Name</label>
                <div class="col-12">
                    <input id="text" name="name" class="form-control here" type="text" required>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12">
                    <button name="submit" type="submit" class="btn btn-primary btn-sm">Add New Theme</button>
                </div>
            </div>
        </form>
    {% elseif theme_ed is defined %}
        <div class="col-lg-4 bg-light card-body">

            <h5>Update Theme</h5>
            <form method="post" action="{{ path('Theme_ed',{'id':theme_ed.idTheme}) }}">
                <div class="form-group row">
                    <label for="text" class="col-12 col-form-label">Name</label>
                    <div class="col-12">
                        <input id="text" name="name" class="form-control here" type="text" value="{{ theme_ed.themeName }}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12">
                        <button name="submit" type="submit" class="btn btn-primary btn-sm">Update Theme</button>
                    </div>
                </div>
            </form>
        </div>
    {% endif %}
    <div class="col-lg-8">
        <table class="table table-hover " id="myTable">
            <thead class="bg-light ">
            <tr>
                <th style="width: 60%">Name</th>
                <th style="width: 20%">Action</th>
            </tr>
            </thead>
            <tbody>
            {%  for th in themes %}
                <tr>
                    <td>{{th.themeName  }}</td>
                    <td>
                        <a href="{{ path('Theme_ed',{'id':th.idTheme}) }}"><i class="fa fa-edit"></i> Edit</a>
                        <a href="{{ path('Theme_del',{'id':th.idTheme}) }}"><i class="fa fa-trash"></i> Delete</a>
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock %}
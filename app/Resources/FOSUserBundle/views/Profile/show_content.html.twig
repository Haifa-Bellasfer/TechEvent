<link href="{{ asset('css/style_profile.css')}}" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="{{ asset('css/style_profile.css')}}">
<div class="mainbody container-fluid">
    <div class="row">
        <div class="navbar-wrapper">
            <div class="container-fluid">
            </div>
        </div>
    </div>
</div>

<div class="col-lg-3 col-md-3 hidden-sm hidden-xs">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="media">
                <div class="media-body">
                    <div align="center">
                        <img class="thumbnail img-responsive" src="{% block img %}https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png{% endblock %}" width="300px" height="300px">
                    </div>
                    <p>
                    <h2>
                        {% block fullname %} user1{% endblock%}
                    </h2>
                    </p>
                    <p><a href="{{ path('fos_user_profile_edit')}}"> Update profile</a></p>
                    <hr>
                    <h3><strong>Username</strong></h3>
                    <p>
                        {% block username %}{{ user.username }} {% endblock%}</p>
                    <hr>
                    <h3><strong>Email</strong></h3>
                    <p>
                        {% block email %}{{ user.email }} {% endblock%}</p>
                    <hr>
                    <h3><strong>Date of Birth</strong></h3>
                    <p>
                        {% block date_of_birth %}date/date/date{% endblock%}</p>
                    <hr>
                    <h3><strong>Address</strong></h3>
                    <p>
                        {% block address %}addresss{% endblock%}</p>
                    <hr>
                    <h3><strong>Phone Number</strong></h3>
                    <p>
                        {% block phone %}124657965 {% endblock%}</p>
                    <hr>
                    <h3><strong>Status</strong></h3>
                    <p>
                        {% block status %}member/vip member/banned{% endblock%}</p>
                    <hr>
                    <h3><strong>Clubs</strong></h3>
                    <p>
                        {% block clubs %}<a href="">club 1</a> <a href="">club 2</a>{% endblock%}</p>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
    <div class="panel panel-default">
        <div class="panel-body">
            <textarea class="form-control" rows="5" placeholder="Hey !!!"></textarea>
            <a class="btn btn-default btn-xs"><i class="fa fa-retweet" aria-hidden="true"></i> Publish </a>
        </div>
    </div>
    <hr>
    <!-- Simple post content example. -->
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="pull-left">
                <a href="#">
                    <img class="media-object img-circle" src="https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png" width="50px" height="50px" style="margin-right:8px; margin-top:-5px;">
                </a>
            </div>
            <h4><a href="#" style="text-decoration:none;"><strong>
                        {% block my_name %}user1{% endblock%}</strong></a> – <small><small><a href="#" style="text-decoration:none; color:grey;"><i><i class="fa fa-clock-o" aria-hidden="true"></i>
                                {% block since_1 %}42 minutes ago{% endblock%}</i></a></small></small></h4>
            <hr>
            <div class="post-content">
                <p>Simple post content example.</p>
                <div class="pull-right btn-group-xs">
                    <a class="btn btn-default btn-xs"><i class="fa fa-retweet" aria-hidden="true"></i> Share</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Reshare Example -->
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="pull-left">
                <a href="#">
                    <img class="media-object img-circle" src="https://lut.im/7JCpw12uUT/mY0Mb78SvSIcjvkf.png" width="50px" height="50px" style="margin-right:8px; margin-top:-5px;">
                </a>
            </div>
            <h4><a href="#" style="text-decoration:none;"><strong>
                        {% block name %}user1{% endblock%}</strong></a> – <small><small><a href="#" style="text-decoration:none; color:grey;"><i><i class="fa fa-clock-o" aria-hidden="true"></i>
                                {% block since_2 %}42 minutes ago{% endblock%}</i></a></small></small></h4>
            <span>
            </span>
            <hr>
            <div class="post-content">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="pull-left">
                            <a href="#">
                                <img class="media-object img-circle" src="https://diaspote.org/uploads/images/thumb_large_283df6397c4db3fe0344.png" width="50px" height="50px" style="margin-right:8px; margin-top:-5px;">
                            </a>
                        </div>
                        <h4><a href="#" style="text-decoration:none;"><strong>
                                    {% block user2 %} user2 {% endblock%}</strong></a> – <small><small><a href="#" style="text-decoration:none; color:grey;"><i><i class="fa fa-clock-o" aria-hidden="true"></i>
                                            {% block since_3 %} about 15 hours ago{% endblock%}</i></a></small></small></h4>
                        <hr>
                        <div class="post-content">
                            Reshare post example.
                            <div class="pull-right btn-group-xs">
                                <a class="btn btn-default btn-xs"><i class="fa fa-retweet" aria-hidden="true"></i> Share</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
